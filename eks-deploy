pipeline {
  agent any

  stages {

    stage('Checkout') {
      steps {
        git url: 'https://github.com/john1436/eks-app.git', branch: 'main'
      }
    }

    stage('Build Image') {
      steps {
        sh 'docker build -t john1436gilbert/eks-app:latest .'
      }
    }

    stage('Push Image') {
      steps {
        sh 'docker push john1436gilbert/eks-app:latest'
      }
    }

    stage('Deploy to EKS') {
      steps {
        sh 'kubectl apply -f deployment.yaml'
        sh 'kubectl apply -f service.yaml'
      }
    }
  }
}

